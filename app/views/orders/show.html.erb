<div class="container">
    <div class="row">
        <div class="col">
            <div class="d-flex flex-row bd-highlight mb-3">
                <div class="p-2 bd-highlight">
                    <h2>注文履歴詳細</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
        <h3>注文情報</h3>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">注文日</th>
                        <th scope="row">配送先</th>
                        <th scope="row">支払方法</th>
                        <th scope="row">ステータス</th>
                    </tr>
                    <tr>
                        <td><%= @order.created_at.to_s(:datetime_jp) %> </td>
                        <td><%= @order.postcode %><%= @order.ship_address %><%= @order.ship_name %> </td></td>
                        <td><%= @order.pay_type %> </td>
                        <td><%= @order.order_status %> </td>
                    </tr>
                </tbody>
            </table>
        <h3>請求情報</h3>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">商品合計</th>
                        <th scope="row">配送料</th>
                        <th scope="row">御請求額</th>
                    </tr>
                    <tr>
                        <td><%= @order.billing_amount - 800 %> </td>
                        <td> 800 </td>
                        <td><%= @order.billing_amount %> </td>
                    </tr>
                </tbody>
            </table>
            <h3>注文内容</h3>
            <table class="table table-bordered">
            <thead>
                    <tr>
                        <th scope="row">商品</th>
                        <th scope="row">単価(税込)</th>
                        <th scope="row">個数</th>
                        <th scope="row">小計</th>
                    </tr>
            </thead>
                <tbody>
                        <% @order_items.each do |order_item| %>
                    <tr>
                        <td><%= order_item.name %> </td>
                        <td><%= order_item.price %> </td>
                        <td><%= order_item.quantity %> </td>
    		          	<td><%= order_item.price * order_item.quantity %> </td>
                    </tr>
                          <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
</div>