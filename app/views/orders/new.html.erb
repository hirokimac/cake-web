<div class="container">
    <div class="row">
        <div class="col">
            <div class="d-flex flex-row bd-highlight mb-3">
                <div class="p-2 bd-highlight">
                    <h1>注文情報入力</h1>
                    <%= form_for(@order, url: {controller: 'orders', action: 'order_check' }, html:{method:'get'}) do |f| %>
                    <%= f.hidden_field :user_id %>
                    <div class="form-group">
                        <p></p>
                        <h3>支払方法</h3>
                        <p></p>
                        <p class="text">ご希望のお支払い方法を選択してください。</p>
                        <div class="radio">
                            <label><%= f.radio_button :pay_type, :クレジットカード %>クレジットカード</label>
                        </div>
                        <div class="radio">
                            <label><%= f.radio_button :pay_type, :銀行振込 %>銀行振込</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-group">
                <h3>お届け先</h3>
                <p></p>
                <p class="text">ご希望のお届け先を選択してください。</p>
                <!-- 自宅 -->
                <div class="radio">
                    <label>
                        <%= radio_button_tag("_add", "usersAdd") %>ご自身の住所
                    </label><br>
                    <span>〒<%= current_user.postcode %> <%= current_user.address %> <br>
                        <%= current_user.last_name %> <%= current_user.first_name %>
                    </span>
                </div>
                <p></p>
                <!-- 登録した配送先 -->
                <div class="radio">
                    <label><%= radio_button_tag("_add", "shipAdds") %>登録済住所から選択</label>
                </div>
                <%= collection_select(:Delivery_addresses, :id, @ads, :id, :postcode) %>
                <%= collection_select(:Delivery_addresses, :id, @ads, :id, :address) %>
                <%= collection_select(:Delivery_addresses, :id, @ads, :id, :name) %>
                <p></p>
                <!-- 新しく配送先を設定-->
                <div class="radio">
                    <label>
                        <%= radio_button_tag("_add", "newAdd") %>
                        新しいお届け先
                    </label>
                </div>

                <div id="form">
                    <p class="text">ご希望のお届け先を入力してください。</p>
                    <%= fields_for :ship_to_address do |a| %>

                    <div class="form-group">
                        <label for="inputPostalCode">郵便番号</label>
                        <%= a.text_field :postcode, class:"form-control", id:"inputPostalCode", style:"width:30%;" %>
                    </div>

                    <div class="form-group">
                        <label for="inputAddress">住所</label>
                        <%= a.text_field :address, class:"form-control", id:"inputAddress", style:"width:70%;" %>
                    </div>

                    <div class="form-group">
                        <label>姓・名</label>
                        <div>
                            <%= a.text_field :name, class:"form-control col-xs-4", style:"width:30%;" %>
                        </div>
                    </div>

                    <div class="row" style="margin:10px 0;"></div>

                    <% end %>
                </div>
            </div>

            <div class="text-center">
                <%= f.submit '確認画面へ進む', class:"btn btn-success" %>
            </div>
            <% end %>
        </div>
    </div>
</div>