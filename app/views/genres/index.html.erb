<div class="container">
    <div class="row">
        <div class="col">
            <h2>ジャンル一覧</h2>

            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <% @genres.each do |genre| %>
                    <tr>
                        <td>
                            <%= link_to genre.name, genre_path(genre.id) %>
                        </td>
                        <% end %>
                </thead>
            </table>
        </div>
    </div>
</div>