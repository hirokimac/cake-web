<div class="container">
    <div class="row">
        <div class="col">

            <h2>商品登録</h2>
            <%= form_for(@product) do |f| %>
            <div class="field row">
                <label for="name">商品名</label>
                <%= f.text_field :name , class:"form-control" %>
            </div>
            <div class="field row">
                <label for="genre">ジャンル</label>
                <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></div>
            <div class="field row">
                <label for="description">商品説明文</label>
                <%= f.text_area :description , class:"form-control" %>
            </div>
            <div class="field row">
                <label for="image_id">商品画像</label>
                <%= f.attachment_field :product_image , class:"form-control" %>
            </div>
            <div class="field row">
                <label for="price">税抜価格</label>
                <%= f.number_field :price , class:"form-control" %>
            </div>
            <%= f.submit "Create Product", class:"btn btn-primary" %>
            <% end %>

        </div>
    </div>

</div>